dc = [[1,0,-1,0],[0,1,0,-1]]
dr = [[0,1,0,-1],[1,0,-1,0]]

def query(n,m):
  ans=[[-1]+[0]*n+[-1] for _ in range(n)]
  ans.append([-1]*(n+2))
  r, c, p = 0, 1, 0
  for i in range(1,n*n+1):  
    ans[r][c] = i
    if ans[r+dr[m-1][p]][c+dc[m-1][p]] != 0:
      p = (p + 1) % 4
    r+=dr[m-1][p]
    c+=dc[m-1][p]
  for row in ans[:-1]:
    print("".join(f"{x:5d}" for x in row[1:-1]))
 
k = int(input())
for _ in range(k):
  n, m =map(int,input().split())
  query(n,m)  
